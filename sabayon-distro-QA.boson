---
repository: https://github.com/Sabayon/sabayon-distro.git
docker_image: sabayon/builder-amd64
artifacts_dir: /tmp/
log_dir: /tmp
separate_artifacts: true
tmpdir: /tmp/boson
docker_image_entrypoint:
        - /bin/sh
        - -c
provisioner:
  shell.Shell:
               - git clone https://github.com/Sabayon/sabayon-distro.git /tmp/boson/github.com/Sabayon/sabayon-distro && cd /tmp/boson/github.com/Sabayon/sabayon-distro && repoman full
